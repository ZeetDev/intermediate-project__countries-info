{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": []
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "tab",
        "indentWidth": 4,
        "formatWithErrors": false,
        "ignore": [],
        "lineWidth": 200,
        "lineEnding": "lf",
        "attributePosition": "auto"
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "semicolons": "always",
            "trailingCommas": "all"
        }
    },
    "json": {
        "formatter": {
            "trailingCommas": "none"
        }
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noConsoleLog": "error"
            },
            "style": {
                "useTemplate": "error"
            },
            "a11y": {
                "noLabelWithoutControl": "error",
                "useAltText": "error",
                "useAnchorContent": "error",
                "useHeadingContent": "error",
                "useIframeTitle": "error",
                "useValidAnchor": "error"
            },
            "nursery": {
                "useSortedClasses": "error"
            }
        }
    }
}
